import asyncio
import asyncpg
from datetime import datetime, timedelta

# === Verbindung zur Datenbank ===
DB_USER = "master2025"
DB_PASS = "anwendungssysteme"
DB_HOST = "db.kaidro.de"
DB_PORT = "5432"
DB_NAME = "postgres"
DB_SCHEMA = "mw212_projekt"
TABLE_HISTORY = "electricity_price_history"

async def get_lowest_price_last_year():
    try:
        # Zeitraum berechnen
        today = datetime.today()
        one_year_ago = today - timedelta(days=365)

        # Verbindung zur Datenbank
        conn = await asyncpg.connect(
            user=DB_USER,
            password=DB_PASS,
            database=DB_NAME,
            host=DB_HOST,
            port=DB_PORT
        )

        await conn.execute(f"SET search_path TO {DB_SCHEMA};")

        # Query ausf√ºhren
        query = f"""
            SELECT MIN("price_euro")
            FROM {TABLE_HISTORY}
            WHERE "timestamp" BETWEEN $1 AND $2;
        """
        lowest_price = await conn.fetchval(query, one_year_ago.date(), today.date())

        await conn.close()
        return lowest_price

    except Exception as e:
        print("Fehler beim Abrufen des niedrigsten Preises:", e)
        return None

# Beispielaufruf
if __name__ == "__main__":
    result = asyncio.run(get_lowest_price_last_year())
    print(f"Niedrigster Preis im letzten Jahr: {result}")
