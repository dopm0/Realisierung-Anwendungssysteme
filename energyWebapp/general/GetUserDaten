import asyncio
import asyncpg

# === Verbindung zur Datenbank ===
DB_USER = "master2025"
DB_PASS = "anwendungssysteme"
DB_HOST = "db.kaidro.de"
DB_PORT = "5432"
DB_NAME = "postgres"
DB_SCHEMA = "mw212_projekt"
TABLE_NAME = "Electricity_Cost"

async def get_user_data(user_id):
    try:
        # Verbindung zur Datenbank herstellen
        conn = await asyncpg.connect(
            user=DB_USER,
            password=DB_PASS,
            database=DB_NAME,
            host=DB_HOST,
            port=DB_PORT
        )

        await conn.execute(f"SET search_path TO {DB_SCHEMA};")

        # Abfrage ausf√ºhren
        query = f"SELECT * FROM {TABLE_NAME} WHERE user_id = $1;"
        records = await conn.fetch(query, user_id)

        # Ergebnis in Liste von Dictionaries umwandeln
        results = [dict(record) for record in records]

        await conn.close()
        return results

    except Exception as e:
        print("Fehler beim Abrufen der Daten:", e)
        return []

# Beispielaufruf
if __name__ == "__main__":
    user_id = 1234  # Beispiel-ID
    daten = asyncio.run(get_user_data(user_id))
    print(daten)
